    <section class="body">
    <div class="form-container">
        <h2>Create a New Post</h2>
        <form action="/createpost" method="POST">
            <input type="text" name="title" placeholder="Title" required class="titleInput">
            <p class="titleErr"> </p>
            <textarea name="content" rows="5" placeholder="Content" required class="contentInput"></textarea>
            <p class="contentErr"> </p>
            <!-- <input type="file" name="image" accept="image/*" required> -->
            <button type="submit">Create Post</button>
        </form>
    </div>
</section>
<script>
const titleInput = document.querySelector('.titleInput');
const titleErr = document.querySelector('.titleErr');
const contentErr = document.querySelector('.contentErr');
const contentInput = document.querySelector('.contentInput');

titleInput.addEventListener('input', (e) => {
    e.target.value = e.target.value.replace(/[^a-zA-Z0-9,'. ]/g, '');
    titleErr.innerHTML = `${e.target.value.length}  / 80`;
    titleErr.style.color = 'black';
    if(e.target.value.length >80) {
        e.target.value = e.target.value.slice(0, 80);
        titleErr.innerHTML = 'Title should be less than 80 characters';
        titleErr.style.color = 'red';
    }
});

contentInput.addEventListener('input', (e) => {
    e.target.value = e.target.value.replace(/[^a-zA-Z0-9,'. ]/g, '');
    contentErr.innerHTML = `${e.target.value.length} / 20,000`;
    contentErr.style.color = 'black';
    if(e.target.value.length > 20000) {
        e.target.value = e.target.value.slice(0, 20000);
        contentErr.innerHTML = 'Content should be less than 20,000 characters';
        contentErr.style.color = 'red';
    }


    if(e.target.value === '\n') {
        e.target.value = e.target.value.replace('\n', '<br>');
    }
});

</script>
